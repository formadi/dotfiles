# change focus within space
alt - left          : yabai -m window --focus west
alt - right         : yabai -m window --focus east
alt - down          : yabai -m window --focus south
alt - up            : yabai -m window --focus north
# alt - q           : yabai -m window --focus prev
# alt - e           : yabai -m window --focus next

# move window and split
ctrl + alt - left   : yabai -m window --warp west
ctrl + alt - right  : yabai -m window --warp east
ctrl + alt - down   : yabai -m window --warp south
ctrl + alt - up     : yabai -m window --warp north

# swap windows
cmd + alt - left    : yabai -m window --swap west
cmd + alt - right   : yabai -m window --swap east
cmd + alt - down    : yabai -m window --swap south
cmd + alt - up      : yabai -m window --swap north

# resize window
shift + alt - left  : yabai -m window --resize right:-20:0 2> /dev/null || yabai -m window --resize left:-20:0 2> /dev/null
shift + alt - down  : yabai -m window --resize bottom:0:20 2> /dev/null || yabai -m window --resize top:0:20 2> /dev/null
shift + alt - up    : yabai -m window --resize bottom:0:-20 2> /dev/null || yabai -m window --resize top:0:-20 2> /dev/null
shift + alt - right : yabai -m window --resize right:20:0 2> /dev/null || yabai -m window --resize left:20:0 2> /dev/null

# toggle window "f"loat
alt - f             : yabai -m window --toggle float --grid 10:10:2:1:6:8
# "z"oom-full(maximize) a window
alt - z             : yabai -m window --toggle zoom-fullscreen
# "b"alance out tree of windows (resize to occupy same area)
alt - b             : yabai -m space --balance
# flip along "y"-axis
alt - y             : yabai -m space --mirror y-axis
# flip along "x"-axis
alt - x             : yabai -m space --mirror x-axis
# "r"otate layout clockwise
alt - r             : yabai -m space --rotate 90



